<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/ivImageRecycler"
        style="@style/RecyclerViewImageDefault"
        android:layout_margin="10dp"
        android:src="@drawable/marvel_placeholder"
        android:scaleType="centerCrop"
        app:siBorderColor="@color/white"
        app:siBorderType="stroke"
        app:siBorderWidth="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvHQNumber"/>

    <TextView
        android:id="@+id/tvHQNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#95"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/ivImageRecycler"
        app:layout_constraintEnd_toEndOf="@id/ivImageRecycler"
        app:layout_constraintTop_toBottomOf="@id/ivImageRecycler"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>